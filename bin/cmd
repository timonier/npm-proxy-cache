#!/bin/sh
set -e

# Check environment

export PATH=$(echo "${PATH}:/usr/sbin" | awk -v RS=":" -v ORS=":" '!a[$1]++{if (NR > 1) printf ORS; printf $a[$1]}')

# Run command

docker run \
    --interactive \
    --net host \
    --rm \
    --tty="$([ -t 0 ] && echo "true" || echo "false")" \
    "${IMAGE:-timonier/npm-proxy-cache}:${TAG:-latest}" "$(basename "$0")" "$@"
